@model IEnumerable<BikeStore.Models.ProductCategory>

@{
    ViewData["Title"] = ViewBag.Title;
}

<div class="p-4">
    <h1>@ViewBag.Title</h1>
    <table class="table">

        @if (Model.Count() == 0)
        {
        <p>@Html.Raw("Sorry! Unfortunately there are no " + @Html.DisplayNameFor(model => model.Name) + "s available at this time.")</p>
        }
        else
        {
            @foreach (var item in Model)
            {
            <tr onclick="SelectRow(this)">
                <td>
                    <h3><img src="~/Content/Category_Icons/@(item.Name.Replace(" ", "_").Replace("-", "_")).png" height="42" width="42"/>@Html.ActionLink(item.Name, item.Name.Replace(" ", "_").Replace("-", "_"))</h3>
                    <h5>@item.Description</h5>
                </td>
            </tr>
            }
        }


    </table>
</div>