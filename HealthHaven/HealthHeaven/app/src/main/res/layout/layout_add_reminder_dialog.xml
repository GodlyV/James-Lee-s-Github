<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/reminderDialog_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Reminder:"
        android:textSize="32dp"
        android:paddingBottom="24dp"/>

    <EditText
        android:id="@+id/addTitle_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminderDialog_TextView"
        android:layout_alignParentStart="true"
        android:hint="Title"
        android:maxLines="2"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/addBody_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTitle_EditText"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Body"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/addBody_EditText"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/repeatTitleDialog_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Repeat:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/repeatRemindersDialog_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text=""
            android:textSize="12dp" />

        <TextView
            android:id="@+id/addDate_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Set Date"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/addTime_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Set Time"
            android:textSize="18dp" />
    </LinearLayout>


</RelativeLayout>